    </image>

    <textlist name="gamelist">
        <selectorColor>00000000</selectorColor>
        <selectedColor>ff0083</selectedColor>
        <selectorHeight>0.06</selectorHeight>
        <primaryColor>777777</primaryColor>
        <secondaryColor>ac7b54</secondaryColor>
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <pos>0.0 0.155</pos>
	    <size>0.32 0.725</size>
        <fontSize>0.035</fontSize>
        <lineSpacing>1.46</lineSpacing>
        <horizontalMargin>0.01</horizontalMargin>
        <zIndex>48</zIndex>
	<scrollSound>./_art/assets/listscroll.wav</scrollSound>
    </textlist>

    <image name="snapmask" extra="true">
        <tile>false</tile>
        <path>./_art/snapmask.png</path>
        <zIndex>47</zIndex>
        <size>1 1</size>
        <pos>0 0</pos>
    </image>
	
	<helpsystem name="help">
        <pos>0 0</pos>
	    <origin>1 0.97</origin>
        <textColor>ff0080</textColor>
        <iconColor>ffffff</iconColor>
    </helpsystem>
    
    <text name="top_label" extra="true">
        <fontPath>./_art/BebasNeue.otf</fontPath>
        <text></text>
        <alignment>left</alignment>
        <color>F8F8F8</color>
        <fontSize>0.039</fontSize>
        <origin>0 0</origin>
        <pos>0.01 0.01</pos>
        <size>0.20 0.08</size>
    </text>
    
    <text name="nameLabel" extra="true">
        <fontPath>./_art/BebasNeue.otf</fontPath>
        <alignment>right</alignment>
        <forceUppercase>1</forceUppercase>
        <color>a4c82a</color>
        <fontSize>0.060</fontSize>
        <origin>0 0</origin>
        <pos>0.33 0.02</pos>
        <size>0.65 0.08</size>
        <zIndex>50</zIndex>
    </text>

