</view>

<feature supported="video">
    <view name="video">
        <image name="tvoverlay" extra="true">
            <tile>false</tile>
	    <path>./_art/titlelogo.png</path>
            <size>1 1</size>
            <pos>0 0</pos>
            <zIndex>49</zIndex>
        </image>
      <rating name="md_rating">
         <origin>0.5 0.5</origin>       
         <pos>0.62 0.88</pos>
         <size>0.06 0.06</size>
         <zIndex>50</zIndex>
         <filledPath>./_art/star_full.png</filledPath>
         <unfilledPath>./_art/star_hollow.png</unfilledPath>
      </rating>
        <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.7 0.515</pos>
            <maxSize>0.73 0.75</maxSize>
            <delay>1.4</delay>
            <showSnapshotNoVideo>false</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
        </video>
        <image name="md_marquee">
            <pos>0.86 0.11</pos>
            <origin>0.55 0.5</origin>
            <maxSize>0.25 0.15</maxSize>
	    <rotation>31</rotation>
            <zIndex>50</zIndex>
        </image>
<datetime name="md_releasedate">
         <origin>0.5 0.5</origin>
         <pos>1.13 0.825</pos>
		 <format>%Y</format>
         <size>0.9 0.9</size>
         <color>ffffff</color>
         <zIndex>50</zIndex>         
      </datetime>

    </view>

</feature>
  <view name="menu">
    <menuBackground name="menubg">
      <color>333333</color>	  
    </menuBackground>
	<menuText name="menutext">
	  <color>ff00b3</color>
      <separatorColor>FFFFFF</separatorColor>
      <selectorColor>${baseColor}</selectorColor>
      <selectorColorEnd>${gradientEndColor}</selectorColorEnd>
      <selectedColor>FFFFFF</selectedColor>
      <selectorGradientType>horizontal</selectorGradientType>
	</menuText>
	<menuTextEdit name="menutextedit">
      <inactive>./_art/assets/textinput_inactive.png</inactive>
      <active>./_art/assets/textinput_active.png</active>

    </menuTextEdit>
  </view>

</theme>
