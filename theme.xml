	<glowOffset>0 0</glowOffset>
        <origin>0 0</origin>
        <pos>0.635 0.11</pos>
        <size>0.320 0.025</size>
    </text>


    <text name="systemInfo">
        <fontPath>./_art/BebasNeue.otf</fontPath>
        <alignment>right</alignment>
        <backgroundColor>00000000</backgroundColor>
        <forceUppercase>1</forceUppercase>
        <color>FFFFFF</color>
        <origin>0 0</origin>
        <pos>0.38 0.14</pos>
