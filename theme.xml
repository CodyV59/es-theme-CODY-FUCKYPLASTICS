        <origin>0 0</origin>
        <pos>0.003 0.72</pos>
        <size>0.28 0.24</size>
    </text>

<image name="controller" extra="true">
        <path>./_art/controllers/${system.theme}.png</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0.66 0.36</pos>
        <maxSize>0.3 0.3</maxSize>
<rotation>-15</rotation>
    </image>
</view>

